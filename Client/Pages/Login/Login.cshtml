@page
@model Client.Pages.Shared.Login.LoginModel
@{
    ViewData["Title"] = "Inici de sessió";
}

<style>
    .fade-out {
        transition: opacity 1s ease-out;
        opacity: 0;
    }
</style>

<div class="spacer-top"></div>
<h2>Incia sessió</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}
@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success">@Model.SuccessMessage</div>
}

<form method="post">
    <div class="form-group">
        <label asp-for="Login.Email"></label>
        <input asp-for="Login.Email" class="form-control" />
        <span asp-validation-for="Login.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Login.Password"></label>
        <input type="password" asp-for="Login.Password" class="form-control" />
        <span asp-validation-for="Login.Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Entrar</button>
</form>

@section Scripts {
    <script>
        setTimeout(() => {
            const successAlert = document.querySelector('.alert-success');
            if (successAlert) {
                successAlert.classList.add('fade-out');
                setTimeout(() => successAlert.remove(), 1000); // S'elimina 1s després
            }
        }, 5000);
    </script>
    <partial name="_ValidationScriptsPartial" />
}